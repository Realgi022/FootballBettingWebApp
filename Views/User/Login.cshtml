@model FootballBettingWebApp.Models.User
@{
    ViewData["Title"] = "Login";
}

<div class="auth-container">
    <h2>Log in</h2>

    <form asp-action="Login" method="post">
        <input asp-for="Username" placeholder="Name" required />
        <input asp-for="PasswordHash" type="password" placeholder="Password" required />

        <button type="submit">Login</button>
    </form>
</div>
