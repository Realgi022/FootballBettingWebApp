@model IEnumerable<BLL.DTOs.MatchDto>

@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="content-box">
        <div class="image-box">
            <img src="@Url.Content("~/images/Logo.png.png")" alt="Betting Image" />
        </div>

        <div class="text-box">
            <h2>The betting website is a home to all gamblers who want to quit gambling!</h2>
        </div>
    </div>

    <div class="matches">
        <h3>Upcoming matches</h3>

        @foreach (var match in Model)
        {
            <div class="match-card">
                <p>@match.TeamHome vs @match.TeamAway</p>
                <small>@match.Date.ToLocalTime().ToString("dd MMM yyyy HH:mm")</small>
            </div>
        }
    </div>

    <div class="auth-links">
        <p>
            Want to use our services
            <a href="/User/Login">login</a> or
            <a href="/User/Register" class="register">register</a>
        </p>
    </div>
</div>
