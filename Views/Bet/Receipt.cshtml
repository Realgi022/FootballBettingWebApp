@model IEnumerable<BLL.DTOs.BetDto>
@{
    ViewData["Title"] = "My Bets Receipt";
    Layout = "_Layout";
}

<h2>🧾 My Bet Receipt</h2>

@if (!Model.Any())
{
    <p>No bets placed yet.</p>
}
else
{
    <div class="table-wrapper">
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Match</th>
                    <th>Bet Type</th>
                    <th>Stake ($)</th>
                    <th>Odds</th>
                    <th>Potential Win ($)</th>
                    <th>Status</th>
                    <th>Placed At</th>
                    <th>Action</th> <!-- New column for Claim button -->
                </tr>
            </thead>
            <tbody>
                @foreach (var bet in Model)
                {
                    <tr>
                        <td>@bet.TeamHome vs @bet.TeamAway</td>
                        <td>@bet.BetType</td>
                        <td>@bet.Stake.ToString("F2")</td>
                        <td>@bet.Odds.ToString("F2")</td>
                        <td style="color:#2ecc71; font-weight:bold;">$@bet.AmountToWin.ToString("F2")</td>
                        <td>@bet.Status</td>
                        <td>@bet.PlacedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</td>
                        <td>
                            @if (bet.Status == "Won")
                            {
                                <form asp-controller="Bet" asp-action="Claim" method="post" style="display:inline;">
                                    <input type="hidden" name="betId" value="@bet.BetId" />
                                    <button type="submit" class="btn-claim">Claim</button>
                                </form>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<style>
    .btn-claim {
        background-color: #2ecc71;
        color: white;
        border: none;
        padding: 5px 10px;
        border-radius: 4px;
        cursor: pointer;
        font-weight: bold;
    }

        .btn-claim:hover {
            background-color: #27ae60;
        }
</style>
